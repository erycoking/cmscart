<%- include('../_layouts/admin_header') %>

  <h2 class="page-title">Pages</h2>
  <a href="/admin/pages/add-page" class="btn btn-primary">Add a new page</a>
  <br><br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% pages.forEach(page => { %>
        <tr>
          <td><%= page.title %> </td>
          <td><a href="/admin/pages/edit-page/<%= page.slug %>">Edit</a> </td>
          <% if (page.slug === 'home') { %>
           <td></td>
          <% } else { %>
            <td><a href="/admin/pages/delete-page/<%= page._id %>">Delete</a> </td>
          <% } %> 
        </tr>
      <% }) %>
    </tbody>
  </table>

<%- include('../_layouts/admin_footer') %>