<%- include('_layouts/header') %>
  
  <% if (products.length) { %>

  <div class="row products">
    <% products.forEach(p => { %>
     <div class="col-xs-12 col-md-4 p">
        <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
          <img src="/product_images/<%= p.id %>/<%= p.image %>" alt="" class="pimage">
        </a>
        <h3 class="mt-3"><%= p.title %></h3>
        <h4>$<%= p.price %></h4>
        <a href="products/<%= p.category %>/<%= p.image %>" class="vd">View Details</a>
     </div>
    <% }) %>
  </div>

  <% } else { %>
    
    <div class="row products">
      <div class="col-xs-12 col-md-12 p">
        <p>No products available, kindly check later</p>
      </div>
    </div>
   
  <% } %>

<%- include('_layouts/footer') %>